<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Base Golem -->
  <ThingDef ParentName="BasePawn" Name="MOL_BaseGolem" Abstract="True">
    <statBases>
      <MoveSpeed>3.2</MoveSpeed>
      <ArmorRating_Blunt>0.38</ArmorRating_Blunt>
