  <ThingDef ParentName="PlantBase" Name="MOL_PoppyBase">
    <defName>MOL_Plant_Poppy</defName>
    <label>poppy</label>
    <selectable>true</selectable>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Crops/PoppyPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <description>A vibrant plant with striking red flowers, known for its use in various medicinal and alchemical preparations, often valued for its potent effects.</description>
    <ingestible>
      <foodType>Plant</foodType>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
      <growDays>7</growDays>
      <sowWork>800</sowWork>
      <sowMinSkill>8</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <harvestedThingDef>MOL_Poppy</harvestedThingDef>
      <purpose>Health</purpose>
    </plant>
  </ThingDef>
  <ThingDef ParentName="TreeBase">
    <defName>MOL_LemonTree</defName>
    <label>lemon tree</label>
    <description>A tall tree native to both deserts and tropics alike. Bright, sour lemons grow profusely on this tree, some lemons may even mature early and fall to the ground before the primary harvest is ready.</description>
    <graphicData>
      <texPath>Things/Plants/Trees/LemonTree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.15, 0.3, 0.15)</volume>
        <offset>(0,0,-0.38)</offset>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <statBases>
      <Beauty>2</Beauty>
      <BeautyOutdoors>2</BeautyOutdoors>
      <Nutrition>1.25</Nutrition>
    </statBases>
    <ingestible/>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <growDays>32.51</growDays>
      <visualSizeRange>0.8~2.0</visualSizeRange>
      <sowMinSkill>6</sowMinSkill>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <fertilityMin>0.7</fertilityMin>
      <topWindExposure>0.05</topWindExposure>
      <mustBeWildToSow>false</mustBeWildToSow>
      <immatureGraphicPath>Things/Plants/Trees/LemonTree_Immature</immatureGraphicPath>
      <harvestWork>800</harvestWork>
      <harvestTag>Standard</harvestTag>
      <harvestYield>50</harvestYield>
      <harvestedThingDef>VCE_RawLemon</harvestedThingDef>
      <harvestFailable>true</harvestFailable>
      <harvestAfterGrowth>0.20</harvestAfterGrowth>
    </plant>
  </ThingDef>
</Defs>
