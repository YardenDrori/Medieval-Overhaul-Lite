<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="TreeBase">
    <defName>MOL_GreatOak</defName>
    <label>great oak</label>
    <description>The tallest variety of hardwood engineered during early terraforming efforts. While common enough to locals, offworlders are often shocked by its imposing scale - canopies easily spanning three to four hundred feet in diameter. Grows on nutrient-rich soil with root systems reaching deep underground.</description>
    <graphicData>
      <texPath>Things/Plants/FullGrown/GreatOak</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
        <offset>(0,0,-0.25)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Skyfaller</altitudeLayer>
    <statBases>
      <Beauty>15</Beauty>
      <MaxHitPoints>400</MaxHitPoints>
      <Flammability>0.65</Flammability>
    </statBases>
    <blockLight>true</blockLight>
    <plant>
      <dieIfLeafless>False</dieIfLeafless>
      <fertilityMin>0.8</fertilityMin>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <fertilitySensitivity>0.8</fertilitySensitivity>
      <leaflessGraphicPath>Things/Plants/FullGrown/GreatOak_Leafless</leaflessGraphicPath>
      <growDays>300</growDays>
      <harvestWork>2000</harvestWork>
      <harvestYield>150</harvestYield>
      <wildClusterWeight>5</wildClusterWeight>
      <wildClusterRadius>5</wildClusterRadius>
      <visualSizeRange>8~12</visualSizeRange>
    </plant>
  </ThingDef>

  <ThingDef ParentName="TreeBase">
    <defName>MOL_GreatIter</defName>
    <label>great iter</label>
    <description>The smallest of the genetically-modified giant trees, distinguished by thick foliage and viscous, sour fruits. During extreme heat, the trees activate dormant genes to produce additional leaf layers - an engineered response to protect against temperature stress.</description>
    <graphicData>
      <texPath>Things/Plants/FullGrown/GreatIter</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
        <offset>(0,0,-0.25)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Pawn</altitudeLayer>
    <statBases>
      <Beauty>10</Beauty>
      <MaxHitPoints>350</MaxHitPoints>
      <Flammability>0.65</Flammability>
    </statBases>
    <blockLight>true</blockLight>
    <plant>
      <dieIfLeafless>False</dieIfLeafless>
      <fertilityMin>0.8</fertilityMin>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <fertilitySensitivity>0.8</fertilitySensitivity>
      <leaflessGraphicPath>Things/Plants/FullGrown/GreatIter_Leafless</leaflessGraphicPath>
      <growDays>300</growDays>
      <harvestWork>2000</harvestWork>
      <harvestYield>150</harvestYield>
      <wildClusterWeight>5</wildClusterWeight>
      <wildClusterRadius>5</wildClusterRadius>
      <visualSizeRange>8~12</visualSizeRange>
    </plant>
  </ThingDef>

  <ThingDef ParentName="TreeBase">
    <defName>MOL_GreatFir</defName>
    <label>great fir</label>
    <description>Three hundred foot evergreen giants with enhanced growth genetics. Their year-round foliage provides welcome color against winter snow, but the trees are notorious for dropping massive ten-inch cones with lethal force.</description>
    <graphicData>
      <texPath>Things/Plants/FullGrown/GreatFir</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Pawn</altitudeLayer>
    <statBases>
      <Beauty>4</Beauty>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>0.7</Flammability>
    </statBases>
    <plant>
      <dieIfLeafless>False</dieIfLeafless>
      <fertilityMin>0.4</fertilityMin>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <growDays>18</growDays>
      <harvestWork>2000</harvestWork>
      <harvestYield>150</harvestYield>
      <wildClusterWeight>32</wildClusterWeight>
      <wildClusterRadius>5</wildClusterRadius>
      <visualSizeRange>3~5</visualSizeRange>
    </plant>
  </ThingDef>

  <ThingDef ParentName="DeciduousTreeBase">
    <defName>MOL_GreatWillow</defName>
    <label>great willow</label>
    <description>Ancient willows exhibiting extreme longevity, some specimens estimated at over a thousand years old. Whether through deliberate engineering or random mutation, these trees show no signs of aging or decay.</description>
    <graphicData>
      <texPath>Things/Plants/FullGrown/GreatWillow</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.3, 0.13)</volume>
        <offset>(0,0,-0.44)</offset>
      </shadowData>
      <shaderParameters>
        <_FallColorSource>(0.373, 0.427, 0.313)</_FallColorSource>
        <_FallTransitionRange>(0.02, 0.14)</_FallTransitionRange>
      </shaderParameters>
    </graphicData>
    <statBases>
      <Beauty>15</Beauty>
    </statBases>
    <plant>
      <dieIfLeafless>False</dieIfLeafless>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <growDays>200</growDays>
      <leaflessGraphicPath>Things/Plants/FullGrown/GreatWillow_Leafless</leaflessGraphicPath>
      <harvestWork>2000</harvestWork>
      <harvestYield>100</harvestYield>
      <wildClusterWeight>32</wildClusterWeight>
      <wildClusterRadius>5</wildClusterRadius>
      <visualSizeRange>6~9</visualSizeRange>
    </plant>
  </ThingDef>
</Defs>
