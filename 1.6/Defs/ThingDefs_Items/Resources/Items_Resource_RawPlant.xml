<?xml version="1.0"?>
<Defs>
  <!-- ==================== Raw Plants Resource ======================= -->
  <!-- Lentils -->
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>MOL_RawLentils</defName>
    <label>lentils</label>
    <description>Raw lentils.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/RawLentils</texPath>
    </graphicData>
    <statBases>
      <MarketValue>0.44</MarketValue>
      <Nutrition>0.02</Nutrition>
    </statBases>
    <ingestible>
      <tasteThought>AteRawFood</tasteThought>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>40</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  <!-- Garlic -->
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>MOL_RawGarlic</defName>
    <label>garlic cloves</label>
    <description>A very old crop which is cultivated for its bulb, formed in the base of the leaves. It is highly appreciated in cooking for its pungent and characteristic taste.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/RawGarlic</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>140</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>
  <!-- Wheat -->
  <ThingDef ParentName="RoughPlantBase">
    <defName>MOL_RawWheat</defName>
    <label>wheat</label>
    <description>Wheat has been vital crop for the rise of civilization, its golden stalks ripening under the sun, ready to be harvested for sustenance and trade. Despite this wheat needs further processing into flour to be a usable food ingredient.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/MOL_RawWheat</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <ingestible>
      <foodType>Seed</foodType>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  <!-- Carrot -->
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>MOL_RawCarrot</defName>
    <label>carrot</label>
    <description>A root vegetable, typically orange in color, though purple, black, red, white, and yellow cultivars exist. A versatile food that can be chopped and boiled, fried or steamed, cooked in soups and stews, as well as used for baby and pet foods.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/MOL_RawCarrots</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>10</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>
  <!-- Sugarcane -->
  <ThingDef ParentName="RoughPlantBase">
    <defName>MOL_RawSugarcane</defName>
    <label>sugarcane</label>
    <description>Raw sugarcane. Needs to be grineded into sugar to be usuable.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/RawSugarcane</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1.2</MarketValue>
    </statBases>
    <ingestible>
      <foodType>Seed</foodType>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>20</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>Foods</li>
    </thingCategories>
  </ThingDef>
  <!-- Poppies -->
  <ThingDef ParentName="RoughPlantBase">
    <defName>MOL_Poppy</defName>
    <label>poppy</label>
    <description>Seed pods harvested from poppy plants. The dried pods contain latex rich in alkaloids that can be processed into morphine at a drug lab. Poppies have been cultivated for their medicinal and recreational properties since ancient times.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/MOL_RawPoppy</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>10</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>60</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <allowedArchonexusCount>20</allowedArchonexusCount>
  </ThingDef>
  <!-- Lemons -->
  <ThingDef ParentName="OrganicProductBase">
    <defName>VCE_RawLemon</defName>
    <label>lemons</label>
    <description>An acid and sour tasting fruit. The juice, zest, and pulp are often used in cooking, often on fish and other meat for better taste.</description>
    <soundInteract>Grain_Drop</soundInteract>
    <soundDrop>Grain_Drop</soundDrop>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/RawLemons</texPath>
    </graphicData>
    <thingCategories>
      <li>VCE_Fruit</li>
    </thingCategories>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <Nutrition>0.05</Nutrition>
      <FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>15</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <socialPropernessMatters>true</socialPropernessMatters>
    <ingestible>
      <preferability>RawTasty</preferability>
      <tasteThought/>
      <foodType>VegetableOrFruit</foodType>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>RawVegetable_Eat</ingestSound>
    </ingestible>
  </ThingDef>
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>VCE_RawOlives</defName>
    <label>olives</label>
    <description>A small, egg-shaped black or green fruit that is used as food or for making oil. Olives freshly picked from the tree contain oleuropein, which makes the fruit unpalatable for immediate consumption. They must be brined or fermented to be used.</description>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/VCE_Olives</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>40</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>VCE_RawSunflower</defName>
    <label>sunflower seeds</label>
    <description>The seeds of the sunflower plant are more commonly eaten as a snack than as part of a meal. They can also be used as garnishes or ingredients in various recipes.</description>
    <soundInteract>Grain_Drop</soundInteract>
    <soundDrop>Grain_Drop</soundDrop>
    <graphicData>
      <texPath>Things/Item/Resource/PlantFoodRaw/VCE_SunflowerSeeds</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>30</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>
</Defs>
