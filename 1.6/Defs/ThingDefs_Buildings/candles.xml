<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Abstract base for all candles -->
  <ThingDef Name="MOL_CandleBase" ParentName="BuildingBase" Abstract="True">
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>14</pathCost>
    <constructEffect>ConstructWood</constructEffect>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
    <rotatable>true</rotatable>
    <selectable>true</selectable>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <clearBuildingArea>false</clearBuildingArea>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <building>
      <isEdifice>false</isEdifice>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <placeWorkers>
      <li>PlaceWorker_GlowRadius</li>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <designationCategory>Furniture</designationCategory>
    <researchPrerequisites>
      <li>Furniture</li>
    </researchPrerequisites>
  </ThingDef>

  <!-- Single Candle -->
  <ThingDef ParentName="MOL_CandleBase">
    <defName>MOL_Candle</defName>
    <label>candle</label>
    <description>A simple candle providing modest light. Dimmer than a torch but burns longer and more steadily. Can be refueled with tallow.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/MOL_RusticCandle/RusticCandle</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
      <drawOffset>(0,0,-0.5)</drawOffset>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Furniture/MOL_RusticCandle/RusticCandle_MenuIcon</uiIconPath>
    <uiIconScale>0.85</uiIconScale>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <WorkToBuild>250</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>0.5</Mass>
      <Beauty>3</Beauty>
    </statBases>
    <costList>
      <MOL_Tallow>10</MOL_Tallow>
    </costList>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>1.0</fuelConsumptionRate>
        <fuelCapacity>20</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>MOL_Tallow</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>4</glowRadius>
        <glowColor>(247,172,65,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1</heatPerSecond>
        <heatPushMaxTemperature>13</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offsetNorth>(0,0,-0.4)</offsetNorth>
        <offsetSouth>(0,0,-0.4)</offsetSouth>
        <offsetWest>(0,0,-0.4)</offsetWest>
        <offsetEast>(0,0,-0.4)</offsetEast>
      </li>
    </comps>
  </ThingDef>

  <!-- Multiple Candles -->
  <ThingDef ParentName="MOL_CandleBase">
    <defName>MOL_Candles</defName>
    <label>candles</label>
    <description>A cluster of candles providing better illumination than a single candle. Can be refueled with tallow.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/MOL_RusticCandles/RusticCandles</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
      <drawOffset>(0,0,-0.5)</drawOffset>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Furniture/MOL_RusticCandles/RusticCandles_MenuIcon</uiIconPath>
    <uiIconScale>0.85</uiIconScale>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <WorkToBuild>250</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>1</Mass>
      <Beauty>3</Beauty>
    </statBases>
    <costList>
      <MOL_Tallow>15</MOL_Tallow>
    </costList>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>1.0</fuelConsumptionRate>
        <fuelCapacity>20</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>MOL_Tallow</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(247,172,65,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1</heatPerSecond>
        <heatPushMaxTemperature>16</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offsetNorth>(0,0,-0.4)</offsetNorth>
        <offsetSouth>(0,0,-0.4)</offsetSouth>
        <offsetWest>(0,0,-0.4)</offsetWest>
        <offsetEast>(0,0,-0.4)</offsetEast>
      </li>
    </comps>
  </ThingDef>

  <!-- Candle Stand -->
  <ThingDef ParentName="MOL_CandleBase">
    <defName>MOL_CandleStand</defName>
    <label>candle stand</label>
    <description>A tall standing candelabra that holds multiple candles. Provides good lighting and adds elegance to a room. Can be refueled with tallow.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/MOL_CandleStand/CandleStand</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(4,4)</drawSize>
      <drawOffset>(0,0,-0.5)</drawOffset>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconScale>0.65</uiIconScale>
    <uiIconOffset>(0,0.5)</uiIconOffset>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>1500</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>5</Mass>
      <Beauty>5</Beauty>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>45</costStuffCount>
    <costList>
      <MOL_Tallow>15</MOL_Tallow>
    </costList>
    <minifiedDef>MinifiedThing</minifiedDef>
    <building>
      <isEdifice>true</isEdifice>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>1.0</fuelConsumptionRate>
        <fuelCapacity>20</fuelCapacity>
        <initialFuelPercent>0</initialFuelPercent>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>MOL_Tallow</li>
          </thingDefs>
        </fuelFilter>
        <destroyOnNoFuel>false</destroyOnNoFuel>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(247,172,65,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1</heatPerSecond>
        <heatPushMaxTemperature>16</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offsetNorth>(0,0,0.5)</offsetNorth>
        <offsetSouth>(0,0,-0.3)</offsetSouth>
        <offsetWest>(-0.25,0,0.1)</offsetWest>
        <offsetEast>(0.25,0,0.1)</offsetEast>
      </li>
    </comps>
  </ThingDef>

  <!-- Royal Candle Stand -->
  <ThingDef ParentName="MOL_CandleBase">
    <defName>MOL_RoyalCandleStand</defName>
    <label>ornate candelabra</label>
    <description>An ornate candelabra crafted with exquisite detail. A symbol of wealth and refinement, it provides excellent lighting while adding significant beauty to any room.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/MOL_RoyalCandleStand/AncientCandleStand</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,4)</drawSize>
      <drawOffset>(0,0,-0.5)</drawOffset>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <uiIconScale>0.65</uiIconScale>
    <uiIconOffset>(0,0.5)</uiIconOffset>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>8</Mass>
      <Beauty>15</Beauty>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <costList>
      <Gold>5</Gold>
      <MOL_Tallow>20</MOL_Tallow>
    </costList>
    <minifiedDef>MinifiedThing</minifiedDef>
    <building>
      <isEdifice>true</isEdifice>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>1.0</fuelConsumptionRate>
        <fuelCapacity>25</fuelCapacity>
        <initialFuelPercent>0</initialFuelPercent>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>MOL_Tallow</li>
          </thingDefs>
        </fuelFilter>
        <destroyOnNoFuel>false</destroyOnNoFuel>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>8</glowRadius>
        <glowColor>(247,172,65,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1</heatPerSecond>
        <heatPushMaxTemperature>16</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offsetNorth>(0,0,0.5)</offsetNorth>
        <offsetSouth>(0,0,-0.3)</offsetSouth>
        <offsetWest>(-0.25,0,0.1)</offsetWest>
        <offsetEast>(0.25,0,0.1)</offsetEast>
      </li>
    </comps>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>
</Defs>
