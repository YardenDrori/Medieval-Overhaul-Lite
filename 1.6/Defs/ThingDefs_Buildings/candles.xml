<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Abstract base for all candles -->
  <ThingDef Name="MOL_CandleBase" ParentName="BuildingBase" Abstract="True">
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>8</pathCost>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
    <rotatable>true</rotatable>
    <selectable>true</selectable>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <clearBuildingArea>false</clearBuildingArea>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <building>
      <isEdifice>false</isEdifice>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <placeWorkers>
      <li>PlaceWorker_GlowRadius</li>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <designationCategory>Furniture</designationCategory>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
  </ThingDef>
  <!-- Single Candle - cheapest, dimmest -->
  <ThingDef ParentName="MOL_CandleBase">
    <defName>MOL_Candle</defName>
    <label>candle</label>
    <description>A simple candle providing modest light. Dimmer than a torch but burns longer and more steadily. Can be refueled with tallow.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/MOL_RusticCandle/RusticCandle</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2.3,2.3)</drawSize>
      <drawOffset>(0,0,-0.08)</drawOffset>
    </graphicData>
    <uiIconPath>Things/Building/Furniture/MOL_RusticCandle/RusticCandle_MenuIcon</uiIconPath>
    <uiIconScale>0.9</uiIconScale>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>150</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>0.5</Mass>
      <Beauty>2</Beauty>
    </statBases>
    <costList>
      <MOL_Tallow>10</MOL_Tallow>
    </costList>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>0.5</fuelConsumptionRate>
        <fuelCapacity>10</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <fuelConsumptionPerTickInRain>0.002</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>MOL_Tallow</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>0.5</heatPerSecond>
        <heatPushMaxTemperature>18</heatPushMaxTemperature>
      </li>
    </comps>
    <minifiedDef/>
    <thingCategories Inherit="False"/>
    <clearBuildingArea>true</clearBuildingArea>
  </ThingDef>
  <!-- Multiple Candles - brighter -->
  <ThingDef ParentName="MOL_CandleBase">
    <defName>MOL_Candles</defName>
    <label>candles</label>
    <description>A cluster of candles providing better illumination than a single candle. Can be refueled with tallow.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/MOL_RusticCandles/RusticCandles</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2.3,2.3)</drawSize>
      <drawOffset>(0,0,-0.08)</drawOffset>
    </graphicData>
    <uiIconPath>Things/Building/Furniture/MOL_RusticCandles/RusticCandles_MenuIcon</uiIconPath>
    <uiIconScale>0.9</uiIconScale>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>200</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>1</Mass>
      <Beauty>3</Beauty>
    </statBases>
    <costList>
      <MOL_Tallow>15</MOL_Tallow>
    </costList>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>0.5</fuelConsumptionRate>
        <fuelCapacity>15</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <fuelConsumptionPerTickInRain>0.003</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>MOL_Tallow</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>8</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1</heatPerSecond>
        <heatPushMaxTemperature>20</heatPushMaxTemperature>
      </li>
    </comps>
    <minifiedDef/>
    <thingCategories Inherit="False"/>
    <clearBuildingArea>true</clearBuildingArea>
  </ThingDef>
  <!-- Candle Stand - tall, uses stuff material -->
  <ThingDef ParentName="MOL_CandleBase">
    <defName>MOL_CandleStand</defName>
    <label>candle stand</label>
    <description>A tall standing candelabra that holds multiple candles. Provides good lighting and adds elegance to a room. Can be refueled with tallow.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/MOL_CandleStand/CandleStand</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,3)</drawSize>
      <drawOffset>(0,0,0.2)</drawOffset>
    </graphicData>
    <uiIconScale>0.7</uiIconScale>
    <uiIconOffset>(0,0.15)</uiIconOffset>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>800</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>5</Mass>
      <Beauty>5</Beauty>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>45</costStuffCount>
    <costList>
      <MOL_Tallow>20</MOL_Tallow>
    </costList>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>0.5</fuelConsumptionRate>
        <fuelCapacity>20</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <fuelConsumptionPerTickInRain>0.004</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>MOL_Tallow</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1.5</heatPerSecond>
        <heatPushMaxTemperature>22</heatPushMaxTemperature>
      </li>
    </comps>
  </ThingDef>
  <!-- Royal Candle Stand - fancy, expensive -->
  <ThingDef ParentName="MOL_CandleBase">
    <defName>MOL_RoyalCandleStand</defName>
    <label>ornate candelabra</label>
    <description>An ornate candelabra crafted with exquisite detail. A symbol of wealth and refinement, it provides excellent lighting while adding significant beauty to any room.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/MOL_RoyalCandleStand/AncientCandleStand</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
      <drawOffset>(0,0,0.2)</drawOffset>
    </graphicData>
    <uiIconScale>0.7</uiIconScale>
    <uiIconOffset>(0,0.15)</uiIconOffset>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>1500</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>8</Mass>
      <Beauty>15</Beauty>
    </statBases>
    <costList>
      <Gold>5</Gold>
      <Steel>25</Steel>
      <MOL_Tallow>20</MOL_Tallow>
    </costList>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>0.5</fuelConsumptionRate>
        <fuelCapacity>20</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <fuelConsumptionPerTickInRain>0.005</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>MOL_Tallow</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>2</heatPerSecond>
        <heatPushMaxTemperature>24</heatPushMaxTemperature>
      </li>
    </comps>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>
</Defs>
