  <!-- Royal Tudor Bed -->
  <!-- NOTE: Original requires DankPyon_Silk (200) and Gold (70) - replaced with Cloth and Gold -->
  <!-- NOTE: Original has MedievalOverhaul.CompProperties_BedCureHediff comp - REMOVED -->
  <!-- NOTE: Original links to DankPyon_RoyalEndTable, DankPyon_RoyalDresser, etc - using vanilla facilities -->
  <ThingDef ParentName="ArtableBedBase">
    <defName>MOL_RoyalTudorBed</defName>
    <label>royal tudor bed</label>
    <description>A luxurious gold-inlaid bed fit for the highborn. Very comfy and beautiful, it is a work of art in itself. Fits two.</description>
