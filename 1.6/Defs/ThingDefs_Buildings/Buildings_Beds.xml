  <!-- Log Bed (Single) -->
  <ThingDef ParentName="MOL_BasicBedBase">
    <defName>MOL_BedLog</defName>
    <label>log bed</label>
    <description>A simple and quick to make log bed. Better than sleeping on bare ground.</description>
    <graphicData>
      <texPath>Things/Building/Furniture/LogSlabBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <size>(1,2)</size>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Beauty>1</Beauty>
      <WorkToBuild>500</WorkToBuild>
      <Mass>30</Mass>
      <BedRestEffectiveness>0.80</BedRestEffectiveness>
      <Comfort>0.45</Comfort>
    </statBases>
    <costList>
      <WoodRaw>45</WoodRaw>
    </costList>
    <uiOrder>2010</uiOrder>
    <building>
      <paintable>true</paintable>
      <bed_showSleeperBody>true</bed_showSleeperBody>
    </building>
    <researchPrerequisites/>
  </ThingDef>
