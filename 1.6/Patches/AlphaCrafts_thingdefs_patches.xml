<?xml version="1.0"?>
<Patch>
  <!-- butter -->
  <Operation Class="PatchOperationReplace" MayRequire="sarg.alphacrafts">
    <xpath>Defs/ThingDef[defName="AC_Butter"]/statBases</xpath>
    <value>
      <statBases>
        <!-- 10 0.01 1 0.2 -->
        <MarketValue>10</MarketValue>
        <Nutrition>0.01</Nutrition>
        <Flammability>1</Flammability>
        <Mass>0.2</Mass>
      </statBases>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace" MayRequire="sarg.alphacrafts">
    <xpath>Defs/ThingDef[defName="AC_Butter"]/comps/li[1]/daysToRotStart</xpath>
    <value>
      <!-- base value is 120 -->
      <daysToRotStart>120</daysToRotStart>
    </value>
  </Operation>
  <Operation Class="PatchOperationRemove" MayRequire="sarg.alphacrafts">
    <xpath>Defs/ThingDef[defName="AC_Butter"]/ingredient</xpath>
  </Operation>
  <Operation Class="PatchOperationRemove" MayRequire="sarg.alphacrafts">
    <xpath>Defs/ThingDef[defName="AC_Butter"]/modExtensions/li[1]</xpath>
  </Operation>
