  <Operation Class="PatchOperationRemove" MayRequire="sarg.alphacrafts">
    <xpath>Defs/ThingDef[defName="AC_Essence"]/comps/li[1]</xpath>
  </Operation>
  <Operation Class="PatchOperationRemove" MayRequire="sarg.alphacrafts">
    <xpath>Defs/ThingDef[defName="AC_Essence"]/modExtensions/li[1]</xpath>
